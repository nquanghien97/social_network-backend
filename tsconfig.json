{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "api/*.ts",
    "src/**/*"
  ]
}